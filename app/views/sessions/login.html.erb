<h1 class="h2">Login</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'login', {:controller => 'sessions', :action => 'authenticate_user', :id => user.id}, method: :post, class: 'orange_link' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Sign up', signup_path %>
